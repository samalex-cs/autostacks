{
  "content_type": {
    "uid": "review",
    "title": "Review",
    "description": "Car reviews for the AutoStack platform - expert and user reviews",
    "schema": [
      {
        "uid": "title",
        "display_name": "Title",
        "data_type": "text",
        "mandatory": true,
        "unique": true,
        "field_metadata": {
          "instruction": "Review title (e.g., '2024 Tata Nexon Review: The Best Compact SUV?')"
        }
      },
      {
        "uid": "slug",
        "display_name": "URL Slug",
        "data_type": "text",
        "mandatory": true,
        "unique": true,
        "field_metadata": {
          "instruction": "URL-friendly identifier (e.g., '2024-tata-nexon-review')"
        }
      },
      {
        "uid": "car_name",
        "display_name": "Car Name",
        "data_type": "text",
        "mandatory": true,
        "field_metadata": {
          "instruction": "Full car name being reviewed (e.g., 'Tata Nexon XZ+ Diesel')"
        }
      },
      {
        "uid": "car_brand",
        "display_name": "Car Brand",
        "data_type": "text",
        "mandatory": true
      },
      {
        "uid": "review_type",
        "display_name": "Review Type",
        "data_type": "text",
        "mandatory": true,
        "enum": {
          "advanced": false,
          "choices": [
            { "value": "Expert Review" },
            { "value": "First Drive" },
            { "value": "Long Term Review" },
            { "value": "Comparison" },
            { "value": "User Review" }
          ]
        },
        "display_type": "dropdown"
      },
      {
        "uid": "author_name",
        "display_name": "Author Name",
        "data_type": "text",
        "mandatory": true
      },
      {
        "uid": "author_designation",
        "display_name": "Author Designation",
        "data_type": "text",
        "mandatory": false,
        "field_metadata": {
          "instruction": "e.g., 'Senior Auto Editor', 'Automotive Journalist'"
        }
      },
      {
        "uid": "author_image",
        "display_name": "Author Image",
        "data_type": "file",
        "mandatory": false
      },
      {
        "uid": "publish_date",
        "display_name": "Publish Date",
        "data_type": "isodate",
        "mandatory": true
      },
      {
        "uid": "rating",
        "display_name": "Overall Rating",
        "data_type": "number",
        "mandatory": true,
        "field_metadata": {
          "instruction": "Rating out of 5 (e.g., 4.5)"
        }
      },
      {
        "uid": "rating_breakdown",
        "display_name": "Rating Breakdown",
        "data_type": "group",
        "mandatory": false,
        "schema": [
          {
            "uid": "performance",
            "display_name": "Performance",
            "data_type": "number"
          },
          {
            "uid": "comfort",
            "display_name": "Comfort",
            "data_type": "number"
          },
          {
            "uid": "features",
            "display_name": "Features",
            "data_type": "number"
          },
          {
            "uid": "safety",
            "display_name": "Safety",
            "data_type": "number"
          },
          {
            "uid": "value_for_money",
            "display_name": "Value for Money",
            "data_type": "number"
          }
        ]
      },
      {
        "uid": "excerpt",
        "display_name": "Excerpt",
        "data_type": "text",
        "mandatory": true,
        "multiline": true,
        "field_metadata": {
          "instruction": "Short summary for listing pages (150-200 characters)"
        }
      },
      {
        "uid": "content",
        "display_name": "Review Content",
        "data_type": "text",
        "mandatory": true,
        "multiline": true,
        "field_metadata": {
          "instruction": "Full review content"
        }
      },
      {
        "uid": "pros",
        "display_name": "Pros",
        "data_type": "text",
        "multiple": true,
        "mandatory": false
      },
      {
        "uid": "cons",
        "display_name": "Cons",
        "data_type": "text",
        "multiple": true,
        "mandatory": false
      },
      {
        "uid": "verdict",
        "display_name": "Verdict",
        "data_type": "text",
        "mandatory": false,
        "multiline": true,
        "field_metadata": {
          "instruction": "Final verdict/conclusion"
        }
      },
      {
        "uid": "thumbnail",
        "display_name": "Thumbnail Image",
        "data_type": "file",
        "mandatory": false,
        "field_metadata": {
          "instruction": "Main image for review listings"
        }
      },
      {
        "uid": "images",
        "display_name": "Gallery Images",
        "data_type": "file",
        "multiple": true,
        "mandatory": false
      },
      {
        "uid": "video_url",
        "display_name": "Video URL",
        "data_type": "text",
        "mandatory": false,
        "field_metadata": {
          "instruction": "YouTube or video embed URL"
        }
      },
      {
        "uid": "read_time",
        "display_name": "Read Time (minutes)",
        "data_type": "number",
        "mandatory": false
      },
      {
        "uid": "is_featured",
        "display_name": "Is Featured?",
        "data_type": "boolean",
        "mandatory": false,
        "default_value": false
      },
      {
        "uid": "is_editors_pick",
        "display_name": "Editor's Pick?",
        "data_type": "boolean",
        "mandatory": false,
        "default_value": false
      },
      {
        "uid": "review_tags",
        "display_name": "Tags",
        "data_type": "text",
        "multiple": true,
        "mandatory": false
      }
    ],
    "options": {
      "singleton": false,
      "title": "title",
      "publishable": true,
      "is_page": false
    }
  }
}

